{
  "name": "gfg-stable-backend",
  "version": "1.0.0",
  "description": "GFG Stable Backend API",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "migrate": "ts-node -r dotenv/config src/database/migrate.ts",
    "migrate:create": "ts-node -r dotenv/config src/database/create-migration.ts",
    "seed": "ts-node -r dotenv/config src/database/seed.ts",
    "setup": "setup-postgres.bat",
    "fix-permissions": "fix-permissions.bat",
    "deploy": "npm run build && npm run migrate && npm run start:prod",
    "test-ssl": "node -e \"const https = require('https'); const options = { hostname: process.env.SSL_TEST_HOST || 'localhost', port: process.env.PORT || 3001, path: '/api/health', method: 'GET', rejectUnauthorized: false }; const req = https.request(options, (res) => { console.log('SSL Test Status:', res.statusCode); res.on('data', (d) => console.log('Response:', d.toString())); }); req.on('error', (e) => console.error('SSL Test Error:', e.message)); req.end();\""
  },
  "keywords": [
    "gfg",
    "stable",
    "racehorse",
    "api"
  ],
  "author": "GFG Stable",
  "license": "MIT",
  "dependencies": {
    "@types/multer": "^2.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pg": "^8.11.3",
    "https": "^1.0.0",
    "fs": "^0.0.1-security"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}
